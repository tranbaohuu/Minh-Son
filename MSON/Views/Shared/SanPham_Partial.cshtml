@model IPagedList<MSON.sanpham>

<div id="zoneUpdateAjax">
    <div class="row">

        @foreach (var item in Model)
        {

            <div class="col-md-4">
                <div class="thumbnail">
                    <div class="row">
                        <div class="col-md-12">

                            <p class="text-center" style="font-size: large;">
                                @Html.ActionLink(item.TEN, "Detail_SanPham", "NguoiDung", new { Id = item.ID }, null)
                            </p>

                        </div>
                        <div class="col-md-12 margin-bottom-10px">
                            <img class="img-thumbnail center-block" data-original="#" width="320" height="240" alt="Không có hình" src="~/IMAGES/@Html.DisplayFor(itemModel => item.IMG_URL)" style="display: block; width: 320px; height: 240px;">
                        </div>
                        <div class="col-md-12 margin-bottom-10px">
                            <div class="col-md-6">
                                <i class="fa fa-calendar" aria-hidden="true"></i>@item.NGAYNHAP.Value.ToString("dd/MM/yyyy")'
                            </div>
                            <div class="col-md-6">
                                <i class="fa fa-diamond">Inox</i>
                            </div>
                       

                        </div>
                        <div class="col-md-12 margin-bottom-10px">
                            <div class="col-md-4">
                                <i class="fa fa-arrows-h" aria-hidden="true">300mm</i>
                            </div>
                            <div class="col-md-4">
                                <i class="fa fa-arrows-v" aria-hidden="true">200mm</i>
                            </div>
                            <div class="col-md-4">
                                <i class="fa fa-balance-scale" aria-hidden="true">2kg</i>
                            </div>

                        </div>
                            <div class="col-md-12">
                                <div class="caption">

                                    @Html.ActionLink("Xem", "Detail_SanPham", "NguoiDung", new { Id = item.ID }, new { @class = "btn btn-primary btn-lg btn-block" })
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        }



    </div>

    <div class="pagedList">
        @Html.PagedListPager(Model, page => @Url.Action("SanPham", "NguoiDung", new { page, loai = ViewBag.IDLoaiHang }), new PagedListRenderOptions() { LinkToFirstPageFormat = "Trang đầu", LinkToLastPageFormat = "Trang cuối", LinkToNextPageFormat = "Sau", LinkToPreviousPageFormat = "Trước" })
    </div>


</div>